@model Entities.Invoice
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        html{
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        .header-color {
            height: 3rem;
            background-color: cornflowerblue;
        }

        .purple {
            color: purple;
        }

        .grey-text {
            color: grey;
        }

        .dateDetails {
            display: flex;
            justify-content: space-between;
            width: 100%;
        }

        .inner-flex {
            float: right;
            margin-top: 1rem;
            
        }

        .body-area {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            margin-top: 14rem;
        }

        .center-float{
            text-align: center;
        }
        .through{
            text-decoration: line-through;
        }
        tr{
            height: 50px;
        }
        .first-flex{
            display: flex;
            justify-content: space-between;
            margin-top: 1rem;
        }
        .busines-name{
            text-align: center;
            margin-top: ;
            font-weight: bold;
            font-size: 2.5rem;
            
        }
    </style>
</head>
<body>
    <!--<div class="header-color">

    </div>-->
    <div class="first-flex">
        <h1 class="busines-name">@Model.BusinessName</h1>
        <img src=@Model.ImageUrl width="80" height="80" />
        <div class="inner-flex">
            <h2>INVOICE# <span class="purple">@Model.Number</span></h2>
            <p class="grey-text">Invoice Date</p>
            <h4>@Model.DateCreated</h4>
            <p class="grey-text">Invoice For</p>
            <h4>@Model.CustomerName</h4>
        </div>
    </div>
       
    
        <div class="body-area">
            <h1 class="center-float">Sales Invoice</h1>
            <table class="table table-striped" style="table-layout: auto !important">
                <thead class="table-light">
                    <tr>
                        <th style="width: 60%;" class="head-width">Item Description</th>
                        <th class="head-width">Cost</th>
                        <th class="head-width">Quantity</th>
                        <th class="head-width">Price</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var i in Model.Items)
                        {
                            <tr>
                                <td style="text-align: center;">@i.Description</td>
                                <td style="text-align: center;"><span class="through">N</span>@i.PricePerUnit.ToString("N2")</td>
                                <td style="text-align: center;">@i.Units</td>
                                <td style="text-align: center;"><span class="through">N</span>@i.TotalCost.ToString("N2")</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>


            <table class="table table-borderless" style=" border: solid 1px white; margin-top: 3rem; width: 350px; float: right;">
                <tr>
                    <td>Subtotal</td>
                    <td style="text-align: right;"><span class="through">N</span>@Model.SubTotal.ToString("N2")</td>
                </tr>
                <tr>
                    <td>Discount</td>
                    <td style="text-align: right;"><span class="through">N</span>@Model.CalculatedWithDiscount.ToString("N2")</td>
                </tr>
                <tr>
                    <td>Tax</td>
                    <td style="text-align: right;"><span class="through">N</span>@Model.TaxFees.ToString("N2")</td>
                </tr>
                <tr>
                    <td>Total</td>
                    <td style="text-align: right;"><span class="through">N</span>@Model.AmountDue.ToString("N2")</td>
                </tr>
                <tr style="border-top: 1px solid black; border-bottom: 1px solid black">
                    <td>Balance</td>
                    <td style="text-align: right;"><span class="through">N</span>@Model.AmountDue.ToString("N2")</td>
                </tr>
            </table>
        </div>
</body>
</html>